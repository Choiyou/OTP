<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/messageItem_LinearLayout">

    <LinearLayout
        android:id="@+id/messageItem_linearlayout_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/messageItem_imageview_profile"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/messageItem_textview_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="별명" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/messageItem_textView_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메시지" />

        <TextView
            android:id="@+id/messageItem_textView_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020.06.27 10:22"
            android:textSize="9dp"
            android:textColor="@android:color/darker_gray" />
    </LinearLayout>
</LinearLayout>