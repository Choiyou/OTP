<?xml version="1.0" encoding="utf-8"?><!--게시글 레이아웃-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/postScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:text="글 제목 : "
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:fontFamily="@font/kyobohandwriting" />

                <TextView
                    android:id="@+id/posttext_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/kyobohandwriting"
                    android:text="제목"
                    android:textColor="#000000"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:text="작성자 : "
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:fontFamily="@font/kyobohandwriting" />

                <TextView
                    android:id="@+id/posttext_nickname"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/kyobohandwriting"
                    android:text="별명"
                    android:textColor="#000000"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:text="가격 : "
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:fontFamily="@font/kyobohandwriting" />

                <TextView
                    android:id="@+id/posttext_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/kyobohandwriting"
                    android:text="0"
                    android:textSize="16dp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="원"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:fontFamily="@font/kyobohandwriting" />

                <Button
                    android:id="@+id/postbtn_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/button_round"
                    android:fontFamily="@font/kyobohandwriting"
                    android:text=" ☞ 거래하기" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="내용 : "
                android:textSize="18dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:fontFamily="@font/kyobohandwriting" />

            <EditText
                android:id="@+id/postedit_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:ems="10"
                android:focusable="false"
                android:fontFamily="@font/kyobohandwriting"
                android:inputType="textMultiLine"
                android:text="게시글 내용" />


            <ImageView
                android:id="@+id/BI_1"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="0.2dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:scaleType="fitXY"
                android:src="@drawable/intro" />

            <ImageView
                android:id="@+id/BI_2"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="0.2dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:scaleType="fitXY"
                android:src="@drawable/intro" />

            <ImageView
                android:id="@+id/BI_3"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="0.2dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:scaleType="fitXY"
                android:src="@drawable/intro" />

            <ImageView
                android:id="@+id/BI_4"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="0.2dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:scaleType="fitXY"
                android:src="@drawable/intro" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>